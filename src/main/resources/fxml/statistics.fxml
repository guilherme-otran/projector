<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox id="RootBox" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="us.guihouse.projector.forms.controllers.StatisticsController">
   <children>
      <HBox fx:id="controlBox" VBox.vgrow="NEVER">
         <children>
            <Label text="Ranking dos últimos">
               <HBox.margin>
                  <Insets left="10.0" top="15.0" />
               </HBox.margin>
            </Label>
            <ChoiceBox fx:id="intervalChoice" prefWidth="150.0">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </ChoiceBox>
            <Label text="Dia da semana">
               <HBox.margin>
                  <Insets left="10.0" top="15.0" />
               </HBox.margin>
            </Label>
            <ChoiceBox fx:id="weekdayChoice" prefWidth="150.0">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </ChoiceBox>
         </children>
      </HBox>
      <Separator VBox.vgrow="NEVER" />
      <BarChart fx:id="barChart" title="Músicas mais tocadas" VBox.vgrow="ALWAYS">
        <xAxis>
          <CategoryAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis side="LEFT" />
        </yAxis>
      </BarChart>
      <ProgressIndicator fx:id="loadSpinner" progress="0.0" />
   </children>
</VBox>
