<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox id="RootBox" prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="us.guihouse.projector.forms.controllers.projection.BgImageController">
<children>
      <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onCancel" text="Voltar" VBox.vgrow="NEVER" />
      <HBox prefWidth="200.0" VBox.vgrow="NEVER">
         <children>
            <RadioButton fx:id="withoutBackgroundRadio" mnemonicParsing="false" text="Sem Fundo">
               <toggleGroup>
                  <ToggleGroup fx:id="animation" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="staticRadio" mnemonicParsing="false" text="Imagem Estática" toggleGroup="$animation" />
            <RadioButton fx:id="animationRadio" mnemonicParsing="false" text="Animação overlay" toggleGroup="$animation" />
         </children>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox fx:id="backgroundBox" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Fundo" />
                  <Label fx:id="backgroundDragDropLabel" alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Arraste e solte a imagem aqui" textAlignment="CENTER" underline="true" wrapText="true" />
                  <Pane fx:id="backgroundImagePane" VBox.vgrow="ALWAYS">
                     <children>
                        <ImageView fx:id="backgroundImageView" fitHeight="160.0" fitWidth="160.0" pickOnBounds="true" preserveRatio="true" />
                     </children>
                  </Pane>
                  <Button mnemonicParsing="false" onAction="#withoutBackgroundClick" prefHeight="27.0" prefWidth="1000.0" text="Sem Fundo" VBox.vgrow="NEVER" />
               </children>
            </VBox>
            <VBox fx:id="logoBox" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Logomarca" />
                  <Label fx:id="logoDragDropLabel" alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Arraste e solte a imagem aqui" textAlignment="CENTER" underline="true" wrapText="true" />
                  <Pane fx:id="logoImagePane" VBox.vgrow="ALWAYS">
                     <children>
                        <ImageView fx:id="logoImageView" fitHeight="160.0" fitWidth="160.0" pickOnBounds="true" preserveRatio="true" />
                     </children>
                  </Pane>
                  <Button mnemonicParsing="false" onAction="#withoutLogoClick" prefHeight="27.0" prefWidth="1000.0" text="Sem Logomarca" VBox.vgrow="NEVER" />
               </children>
            </VBox>
            <VBox fx:id="overlayBox" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Overlay" />
                  <Label fx:id="overlayDragDropLabel" alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Arraste e solte a imagem aqui" textAlignment="CENTER" underline="true" wrapText="true" />
                  <Pane fx:id="overlayImagePane" VBox.vgrow="ALWAYS">
                     <children>
                        <ImageView fx:id="overlayImageView" fitHeight="160.0" fitWidth="160.0" pickOnBounds="true" preserveRatio="true" />
                     </children>
                  </Pane>
                  <Button mnemonicParsing="false" onAction="#withoutOverlayClick" prefHeight="27.0" prefWidth="1000.0" text="Sem Overlay" VBox.vgrow="NEVER" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
