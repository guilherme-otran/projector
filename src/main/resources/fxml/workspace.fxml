<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.media.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox id="RootBox" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="us.guihouse.projector.forms.controllers.WorkspaceController">
   <children>
      <MenuBar VBox.vgrow="NEVER">
        <menus>
          <Menu mnemonicParsing="false" text="Gerenciar Letras">
            <items>
                  <Menu mnemonicParsing="false" text="Cadastrar Letra">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#onRegisterManualMusic" text="Digitar Manualmente" />
                        <MenuItem mnemonicParsing="false" onAction="#onImportMusicFromWeb" text="Importar de um Site" />
                        <MenuItem mnemonicParsing="false" onAction="#onImportMusicFromTextFile" text="Importar de Arquivo Texto" />
                    </items>
                  </Menu>
              <MenuItem mnemonicParsing="false" onAction="#onOpenMusicList" text="Lista De Letras" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Imagem de Fundo">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#onSelectBackgroundImageFile" text="Selecionar Arquivo" />
                  <CheckMenuItem fx:id="cropBackgroundMenuItem" mnemonicParsing="false" onAction="#onCropBackgroundChanged" selected="true" text="Corte De Imagem" />
              </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Configurações">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#onChangeFont" text="Alterar Fonte" />
                  <Menu mnemonicParsing="false" text="Modo de Projeção de Letras">
                     <items>
                        <RadioMenuItem fx:id="singleLineProjectionMenuItem" mnemonicParsing="false" onAction="#onSingleLineProjection" selected="true" text="Uma linha por vez">
                           <toggleGroup>
                              <ToggleGroup fx:id="multilineProjection" />
                           </toggleGroup></RadioMenuItem>
                        <RadioMenuItem fx:id="multilineProjectionMenuItem" mnemonicParsing="false" onAction="#onMultilineProjection" text="Várias linhas" toggleGroup="$multilineProjection" />
                     </items>
                  </Menu>
                  <Menu fx:id="projectionScreenMenu" mnemonicParsing="false" text="Tela de Projeção" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Ajuda">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#onHelpAbout" text="Sobre" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#onHelpManual" text="Manual de Instruções" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <SplitPane dividerPositions="0.3622222222222222" layoutX="3.0" layoutY="63.0" VBox.vgrow="ALWAYS">
        <items>
            <VBox>
               <children>
                  <TitledPane animated="false" text="Lista de Projeção" VBox.vgrow="ALWAYS">
                      <content>
                        <VBox>
                            <children>
                               <MenuButton mnemonicParsing="false" prefHeight="25.0" text="+ Incluir item" VBox.vgrow="NEVER">
                                 <items>
                                   <MenuItem mnemonicParsing="false" onAction="#onAddMusic" text="Letra de Musica" />
                                   <MenuItem mnemonicParsing="false" onAction="#onAddBrowser" text="Site WEB (YouTube)" />
                                     <MenuItem mnemonicParsing="false" onAction="#onAddPicture" text="Imagem" />
                                     <MenuItem mnemonicParsing="false" onAction="#onAddText" text="Texto" />
                                 </items>
                               </MenuButton>
                               <ListView fx:id="projectionListView" VBox.vgrow="ALWAYS">
                                  <VBox.margin>
                                     <Insets top="10.0" />
                                  </VBox.margin>
                               </ListView>
                            </children>
                         </VBox>
                      </content>
                  </TitledPane>
                  <TitledPane animated="false" text="Pré Visualização" VBox.vgrow="NEVER">
                     <content>
                        <AnchorPane>
                           <children>
                              <Canvas fx:id="previewCanvas" height="200.0" width="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                           </children>
                        </AnchorPane>
                     </content>
                  </TitledPane>
               </children>
            </VBox>
            <AnchorPane fx:id="targetAnchorPane" prefHeight="200.0" prefWidth="200.0" />
        </items>
      </SplitPane>
   </children>
</VBox>
